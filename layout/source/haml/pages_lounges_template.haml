						%h5 Она задала нам неожиданный вопрос
						%p 24 июл в 14:44 от #unihuqhookahplaces

					%footer
						%p Copyright © 2015 Уникальные Кальянные
						%p C любовью от CPD&BBK
			-# Left bar
			%section#menu_right_part.right_menu
				%img#closing.pointer{ :src=>"./images/cross.svg" , :alt=>"Закрыть"}
				-# %a
				-# 	%h3#main_nav_btn Главная страница
				-# 	%p Основная информация
				%a
					%h3#lounges_nav_btn Ложи
					%p Уникальные заведения

				%a
					%h3#philosophy_nav_btn Философия
					%p Наши ценности

				%a
					%h3#community_nav_btn Сообщество
					%p Полезно быть своим
				%a
					%h3#franchise_nav_btn Франшиза
					%p Открыть Ложу

				%button.button-arrow#go_login_from_menu_btn Круг избранных

		-# Попапы кальянщиков
		#wrapper_hm_popup
			-# Карточка 1



		-# Color Overlay
		#color_overlay.color_overlay

		-# Хидер
		%header#header.pages_lounges_header
			%img#menu_header_logo.pointer{ :src=>"./images/{{ slug }}/logo.svg", :alt=>"Уникальные Кальянные"}
			%nav
				%a{:id=>"login_header_btn"} Войти
				%a{:id=>"signup_header_btn"} Зарегистрироваться
				%img#menu_header_btn.pointer{ :src=>"./images/{{ slug }}/menu.svg", :alt=>"Меню"}

		-# Основной контент
		%main{:id => 'main_content'}
			-# Первый блок
			%section.lounges_block_1
				-# Контент
				%section.content
					%header
						%h1{style: 'color: {{ color }};'} {{ title }}
						%p {{ slogan }}*

					-# Адрес, телефон и время работы
					%section.information
						%figure
							%img{ :src=>"./images/{{ slug }}/location.svg", :alt=>"Город", :height=>"16px" }
							%figcapation {{ city }}, {{ address }}
						%figure
							%img{ :src=>"./images/{{ slug }}/phone.svg", :alt=>"Город", :height=>"16px" }
							%figcapation {{ phone }}
						%figure
							%img{ :src=>"./images/{{ slug }}/clock.svg", :alt=>"Город", :height=>"16px" }
							%figcapation
								{{ work_hours }}

					-# Кнопка бронирования
					%section.actions
						%button.button-arrow.btn_arrow#reserve_table_btn{style: 'border: 1px solid {{ color }}'} Забронировать столик
						-# 	 Связаться с нами

				-# Герб
				%section.blazon
					-# Герб
					%img.blazon{ :src=>"{{ blazon }}"}
					-# Свечение
					.blazon_glow
					.blazon_glow_2

				-# Подпись
				%footer
					%p *{{ slogan_ru }}

			-# 2. Описание
			%section.lounges_block_2
				.text-wrapper-liberty
					%h4 {{ description_header }}
					%p {{ description_text }}

			-# 3. Слайдер
			%section.lounges_block_3
				%section.cd-hero
					%ul.cd-hero-slider.autoplay

					.cd-slider-nav
						%nav
							%ul
			-# 4. Кальянщики
			%section.lounges_block_4

				%header
					%h2{style: 'color: {{ color }};'} Кальянные мастера
					%p Уникальная Кальянная «{{ title }}»
					%p {{ hookmasters_description }}

				.wrapper_hm_cards

			-# 5. Карта
			%section.lounges_block_5

				-# Текстовый блок
				%section#map_wrapper
					%header
						%h3{style: 'color: {{ color }};'} {{ city }}
						%p {{ map_district }}

					%p {{ map_description }}

					%p
						%img{:src => "./images/{{ slug }}/location.svg"}
						%small {{ city }}, {{ address }}

				-# Карта
				.map_wrapper{:data => {'map' => {'lat' => '57.1502699', 'lng' => '65.5854143'}}}
					.map_overlay

			-# 6. Контакты
			%section.lounges_block_6
				%header
					%h2{style: 'color: {{ color }};'} Контакты
					%h5 По вопросам справки обращайтесь по телефону в рабочее время:

				%h6 Адрес:
				%p {{ city }}, {{ address }}

				%h6 Контактный номер:
				%p {{ phone }}

				%h6 Рабочие часы:
				%p
					{{ work_hours }}

				%h6 Социальные сети
				%p
					%a{:href=>"{{ vk_link }}", target: '_blank'} Группа Вконтакте

			-# 7. Присоединятесь!
			%section.lounges_block_7
				.wrapper_sun
					%img.sun{ :src=>"./images/{{ slug }}/sun.svg" , :alt=>"Звезда"}
					%img.sun_rotation{ :src=>"./images/{{ slug }}/sun_lines.svg"}

					.sun_glow
					.sun_glow_2

				.wrapper_sun_text
					%h3 {{ slogan }}*
					%h6 *{{ slogan_ru }}
